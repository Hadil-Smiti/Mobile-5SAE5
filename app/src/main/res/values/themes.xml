<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EspritClubs" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/darker_grey</item>
        <item name="colorAccent">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Text color on primary elements -->
        <!-- Disable textAllCaps for buttons globally -->
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item> <!-- For MaterialComponents buttons -->
        <item name="android:windowBackground">@color/white</item> <!-- Background color -->
    </style>

    <style name="Theme.EspritClubs" parent="Base.Theme.EspritClubs">
        <!-- Customize your light theme here -->
        <item name="android:textColor">@color/black</item> <!-- Ensure black text for readability -->
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="ProfileFieldLabel">
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ProfileFieldText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>
