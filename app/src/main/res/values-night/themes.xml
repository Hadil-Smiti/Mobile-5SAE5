<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Base.Theme.EspritClubs" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Text color on primary elements -->
        <item name="android:windowBackground">@color/black</item> <!-- Background for dark mode -->
        <item name="android:textColor">@color/white</item> <!-- Ensure white text for readability -->
    </style>
    <style name="Theme.Healthcare" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EspritClubs" parent="Base.Theme.EspritClubs">
        <!-- Customize your dark theme here -->
        <item name="android:textColor">@color/white</item> <!-- White text for readability -->
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="ProfileFieldLabel">
        <item name="android:textColor">@color/grey</item> <!-- Lighter text for readability -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ProfileFieldText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item> <!-- Lighter text for readability -->
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>
